<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"/>
    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/view"
        android:background="@color/white">
        <ImageView
            android:id="@+id/goBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_black_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/barTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff1a1a1a"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/goBack"
            android:layout_marginLeft="8dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@id/bar"
        android:visibility="gone">
        <TextView
            android:id="@+id/title_text"
            android:textColor="#A4A6A8"
            android:textSize="13sp"
            tools:text="SSSS"
            android:maxWidth="150dp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/allChoose"
            android:text="@string/allChoose"
            android:textColor="#A4A6A8"
            android:textSize="13sp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/allChoose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/selector_item_selector"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_timeType"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@id/bar">

        <TextView
            android:id="@+id/timeType1"
            android:layout_width="78dp"
            android:layout_height="30dp"
            android:background="@drawable/selector_item_time_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/timeType2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:text="一个月内"
            android:textSize="12dp"
            android:textColor="@drawable/selector_text_color"/>

        <TextView
            android:id="@+id/timeType2"
            android:layout_width="78dp"
            android:layout_height="30dp"
            android:background="@drawable/selector_item_time_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/timeType3"
            app:layout_constraintStart_toEndOf="@id/timeType1"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:text="三个月内"
            android:textSize="12dp"
            android:textColor="@drawable/selector_text_color"/>

        <TextView
            android:id="@+id/timeType3"
            android:layout_width="78dp"
            android:layout_height="30dp"
            android:background="@drawable/selector_item_time_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/timeType4"
            app:layout_constraintStart_toEndOf="@id/timeType2"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:text="半年内"
            android:textSize="12dp"
            android:textColor="@drawable/selector_text_color"/>

        <TextView
            android:id="@+id/timeType4"
            android:layout_width="78dp"
            android:layout_height="30dp"
            android:background="@drawable/selector_item_time_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/timeType3"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:text="半年前"
            android:textSize="12dp"
            android:textColor="@drawable/selector_text_color"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cl_timeType"
        android:layout_above="@id/bottomButton"/>
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/recyclerView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/bottomButton"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7fff"
        android:visibility="gone"
        tools:visibility="visible">
        <View
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center_vertical"
            android:textColor="#fff"
            android:background="@drawable/circle_button_fill_6"/>
        <ImageView
            android:id="@+id/img_anim"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/shape_btn_amin"/>
        <TextView
            android:id="@+id/clean"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="@string/delete"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:textColor="#fff" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/noData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_below="@id/bar"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_no_data"
            android:layout_marginTop="97dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#B3B3B3"
            android:text="文件空空如也！"
            android:layout_marginTop="21dp"/>
    </LinearLayout>
</RelativeLayout>