<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="70dp"
        android:fitsSystemWindows="true"
        android:id="@+id/bar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000">
            <ImageView
                android:id="@+id/barBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:padding="7dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_base_back"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/barTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="无敌清理大师"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textColor="#FF222F3A"/>
            <TextView
                android:id="@+id/order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#FFA8A8A8"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:drawableEnd="@drawable/ic_icon_sjj"
                android:drawablePadding="5dp"
                android:text="@string/dateUnOrder"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line1"
        android:layout_below="@id/bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/pathText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            tools:text="内部存储设备"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line1"
        android:overScrollMode="never" />
    <LinearLayout
        android:id="@+id/bottomButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#7fff"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        tools:visibility="visible">
        <Button
            android:id="@+id/copy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="复制"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ff3392fd"
            android:background="@drawable/button_copy"/>
        <Button
            android:id="@+id/clean"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="清理"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="10dp"
            android:textColor="#fff"
            android:background="#3392FD"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/copyActButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#7fff"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        tools:visibility="visible">
        <Button
            android:id="@+id/paste"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="粘贴"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ff3392fd"
            android:background="@drawable/button_copy"/>
        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="取消"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="10dp"
            android:textColor="#fff"
            android:background="#3392FD"/>
    </LinearLayout>

</RelativeLayout>