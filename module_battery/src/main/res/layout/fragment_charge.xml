<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:id="@+id/statusBarHeight"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/back"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_marginLeft="20dp"
                android:layout_width="22dp"
                android:layout_height="22dp" />

            <TextView
                android:text="充电状态"
                android:textColor="#1A1A1A"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/batteryAbout"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@mipmap/ic_about_charge"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:visibility="gone"/>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/bannerAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_charge_tab_bg"
            android:paddingBottom="40dp">
            <com.feisu.module_battery.view.BatteryChargeView
                android:id="@+id/batteryStatePictures"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"
                android:layout_width="290dp"
                android:layout_height="130dp"/>
            <TextView
                android:id="@+id/currentElectricQuantityValue2"
                app:layout_constraintStart_toStartOf="@id/batteryStatePictures"
                app:layout_constraintEnd_toEndOf="@id/batteryStatePictures"
                app:layout_constraintTop_toTopOf="@id/batteryStatePictures"
                app:layout_constraintBottom_toBottomOf="@id/batteryStatePictures"
                android:text="18%"
                android:textColor="#FFC123"
                android:textSize="35sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
            <RadioGroup
                android:id="@+id/chargeStatic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/batteryStatePictures"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/fastCharge"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/selector_fast_charge"
                    android:gravity="center"
                    android:button="@null"
                    android:text="快速充电"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/turbineCharge"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/selector_turbine_charge"
                    android:gravity="center"
                    android:button="@null"
                    android:text="涡轮充电"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/cyclicCharge"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/selector_cyclic_charge"
                    android:gravity="center"
                    android:button="@null"
                    android:text="循环充电"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </RadioGroup>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white">
            <TextView
                android:id="@+id/currentElectricQuantityTip"
                android:text="当前电量："
                android:textColor="#808080"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/currentElectricQuantityValue"
                android:textSize="30sp"
                android:textColor="@color/themeColor"
                android:text="00%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/white">
            <ViewSwitcher
                android:id="@+id/chargeViewSwitcher"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/charge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/remainingTimeTip"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="充满还需时间:"
                        android:textColor="#808080"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/remainingTimeValueHour"
                        android:text="0"
                        android:textColor="@color/themeColor"
                        android:textSize="32sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/hourUnit"/>
                    <TextView
                        android:id="@+id/hourUnit"
                        android:text="小时"
                        android:textColor="#1A1A1A"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/remainingTimeValueMinute"/>
                    <TextView
                        android:id="@+id/remainingTimeValueMinute"
                        android:text="12"
                        android:textColor="@color/themeColor"
                        android:textSize="32sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/minuteUnit"/>
                    <TextView
                        android:id="@+id/minuteUnit"
                        android:text="分钟"
                        android:textColor="#1A1A1A"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/notCharge"
                    android:text="电量已满"
                    android:textColor="@color/themeColor"
                    android:textSize="29sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
            </ViewSwitcher>

        </LinearLayout>
        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>