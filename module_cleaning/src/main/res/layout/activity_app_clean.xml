<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F7F6FF"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"/>
    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/view">
        <ImageView
            android:id="@+id/goBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_black_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/barTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用管理"
            android:textColor="#ff1a1a1a"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/goBack"
            android:layout_marginLeft="8dp"/>
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#fff"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/bar">
        <TextView
            android:id="@+id/totalAppTip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="13dp"
            android:layout_marginTop="4dp"
            android:text="目前安装软件数量："
            android:textColor="#070505"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/totalApp"
            app:layout_constraintStart_toEndOf="@id/totalAppTip"
            app:layout_constraintBaseline_toBaselineOf="@id/totalAppTip"
            tools:text="123"
            android:textColor="#22D789"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/occupyStorageTip"
            app:layout_constraintTop_toBottomOf="@id/totalAppTip"
            app:layout_constraintStart_toStartOf="@id/totalAppTip"
            android:text="占用:"
            android:textColor="#070505"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/occupyStorageValue"
            app:layout_constraintStart_toEndOf="@id/occupyStorageTip"
            app:layout_constraintBaseline_toBaselineOf="@id/occupyStorageTip"
            tools:text="1021MB"
            android:textColor="#22D789"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/searchLine"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4573"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/search"
            app:layout_constraintStart_toStartOf="@id/searchLine"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="13dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/shape_edit_text_bg"
            android:hint="搜索软件名"
            android:paddingStart="21dp"
            android:drawableEnd="@drawable/ic_baseline_search"
            android:paddingEnd="21dp"
            android:textColorHint="#858585"
            android:textSize="13sp"
            android:textColor="#070505"
            android:layout_width="0dp"
            android:layout_height="31dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/appTabLayout"
        app:tabIndicatorHeight="0dp"
        app:tabPaddingStart="0dp"
        app:tabPaddingEnd="0dp"
        app:tabMode="scrollable"
        app:tabGravity="fill"
        app:layout_constraintTop_toBottomOf="@id/searchView"
        android:background="#FFFFFF"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/appViewPager"
        app:layout_constraintTop_toBottomOf="@id/appTabLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>