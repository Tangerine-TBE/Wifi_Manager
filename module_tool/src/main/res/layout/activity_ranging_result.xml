<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RangingResultActivity"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:text="结果"
            android:textColor="#ff1a1a1a"
            android:textSize="18sp"
            app:drawableLeftCompat="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/errorBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_ranging_result_help_bg"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:text="差距太大？"
            android:textColor="#fffd6e1d"
            android:textSize="15sp" />
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="@drawable/shape_ranging_result_item_border"
                android:layout_marginTop="4dp">
                <ImageView
                    android:id="@+id/iv_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ranging_result_height"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物体高度"
                    android:textColor="#ff131313"
                    android:textSize="15sp"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/iv_height"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/result_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="-0.68m"
                    android:textColor="#ffff9436"
                    android:textSize="17sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="@drawable/shape_ranging_result_item_border"
                android:layout_marginTop="4dp">

                <ImageView
                    android:id="@+id/iv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_ranging_result_distance" />
                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水平距离"
                    android:textColor="#ff131313"
                    android:textSize="15sp"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/iv_distance"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/result_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="-0.68m"
                    android:textColor="#5048FE"
                    android:textSize="17sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="@drawable/shape_ranging_result_item_border"
                android:layout_marginTop="4dp">
                <ImageView
                    android:id="@+id/iv_tall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ranging_result_tall"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_tall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身高"
                    android:textColor="#ff131313"
                    android:textSize="15sp"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/iv_tall"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/result_tall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="-0.68m"
                    android:textColor="#179BEE"
                    android:textSize="17sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="@drawable/shape_ranging_result_item_border"
                android:layout_marginTop="4dp">
                <ImageView
                    android:id="@+id/iv_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ranging_result_look_up"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="仰视"
                    android:textColor="#ff131313"
                    android:textSize="15sp"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/iv_up"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/result_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="-0.68m"
                    android:textColor="#FD6E1D"
                    android:textSize="17sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="@drawable/shape_ranging_result_item_border"
                android:layout_marginTop="4dp">
                <ImageView
                    android:id="@+id/iv_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ranging_result_look_down"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物体高度"
                    android:textColor="#ff131313"
                    android:textSize="15sp"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/iv_down"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/result_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="-0.68m"
                    android:textColor="#5048FE"
                    android:textSize="17sp" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="温馨提示：测量结果会受设置的摄像头距离地面的高度、测量姿势、被测量物体距离影响、故此测量结果会有一定误差，仅供参考。若误差大，请您仔细阅读测量说明和注意事项，或反馈给我们，感谢您的支持与理解。"
                android:textColor="#ff999999"
                android:textSize="13sp"
                android:layout_marginTop="27dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="确定"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="46dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_ranging_result_btn_bg"/>
</LinearLayout>