<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="160dp">
    <ImageView
        android:id="@+id/photoItemIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        tools:src="@mipmap/icon_xc"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/photoItemTitle"
        app:layout_constraintTop_toTopOf="@id/photoItemIcon"
        app:layout_constraintStart_toEndOf="@id/photoItemIcon"
        android:layout_marginStart="10dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:text="相似图片"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/photoItemDes"
        app:layout_constraintStart_toStartOf="@id/photoItemTitle"
        app:layout_constraintTop_toBottomOf="@id/photoItemTitle"
        tools:text="清理多余的相似图片"
        android:textSize="12sp"
        android:textColor="#6e6e6e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/photoItemRightIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/photoItemIcon"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/ic_fold_true"
        android:layout_width="18dp"
        android:layout_height="18dp"/>
    <TextView
        android:id="@+id/photoItemSize"
        app:layout_constraintEnd_toStartOf="@id/photoItemRightIcon"
        app:layout_constraintTop_toTopOf="@id/photoItemIcon"
        android:layout_marginEnd="15dp"
        tools:text="159MB"
        android:textSize="12sp"
        android:textColor="#6e6e6e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/photoItemImage1"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/photoItemIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/photoItemIcon"
        app:layout_constraintEnd_toStartOf="@id/photoItemImage2"
        android:scaleType="centerCrop"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/photoItemImage2"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/photoItemIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/photoItemImage1"
        app:layout_constraintEnd_toStartOf="@id/photoItemImage3"
        android:scaleType="centerCrop"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/photoItemImage3"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/photoItemIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/photoItemImage2"
        app:layout_constraintEnd_toStartOf="@id/photoItemImage4"
        android:scaleType="centerCrop"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/photoItemImage4"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/photoItemIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/photoItemImage3"
        app:layout_constraintEnd_toEndOf="@id/photoItemRightIcon"
        android:scaleType="centerCrop"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>