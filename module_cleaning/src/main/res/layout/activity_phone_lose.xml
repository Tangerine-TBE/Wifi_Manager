<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:background="#3392FD"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/goBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16sp"
                android:src="@drawable/ic_arrow_back_white_24dp"/>
            <TextView
                android:text="手机瘦身"
                android:textColor="#FFFFFF"
                android:textSize="19sp"
                android:layout_marginStart="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_scrollFlags="enterAlways|scroll"
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:background="#3392FD"
                android:orientation="vertical">
                <com.feisukj.cleaning.view.CircleProgress
                    android:id="@+id/progressStorage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.127"
                    android:layout_width="61dp"
                    android:layout_height="61dp" />
                <TextView
                    android:id="@+id/progressText"
                    app:layout_constraintStart_toStartOf="@id/progressStorage"
                    app:layout_constraintEnd_toEndOf="@id/progressStorage"
                    app:layout_constraintTop_toTopOf="@id/progressStorage"
                    app:layout_constraintBottom_toBottomOf="@id/progressStorage"
                    android:text="52%"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/storageTip"
                    app:layout_constraintStart_toEndOf="@id/progressStorage"
                    app:layout_constraintTop_toTopOf="@id/progressStorage"
                    android:layout_marginStart="19dp"
                    android:text="手机空间充足"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/storageSurplusTip"
                    app:layout_constraintStart_toStartOf="@id/storageTip"
                    app:layout_constraintTop_toBottomOf="@id/storageTip"
                    android:layout_marginTop="9dp"
                    android:text="剩余："
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/storageSurplusValue"
                    app:layout_constraintBaseline_toBaselineOf="@id/storageSurplusTip"
                    app:layout_constraintStart_toEndOf="@id/storageSurplusTip"
                    tools:text="14.2GB"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/storageTotalTip"
                    app:layout_constraintStart_toEndOf="@id/storageSurplusValue"
                    app:layout_constraintBaseline_toBaselineOf="@id/storageSurplusValue"
                    android:layout_marginStart="18dp"
                    android:text="总共："
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/storageTotalValue"
                    app:layout_constraintBaseline_toBaselineOf="@id/storageTotalTip"
                    app:layout_constraintStart_toEndOf="@id/storageTotalTip"
                    tools:text="14.2GB"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F7F6FF"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bigFileItem"
                    android:layout_marginTop="8dp"
                    android:background="#FFFFFF"
                    android:paddingBottom="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/bigFileItemIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="13dp"
                        android:src="@mipmap/ic_big_file"
                        android:layout_width="43dp"
                        android:layout_height="43dp"/>
                    <TextView
                        android:id="@+id/bigFileCount"
                        app:layout_constraintStart_toEndOf="@id/bigFileItemIcon"
                        app:layout_constraintTop_toTopOf="@id/bigFileItemIcon"
                        android:layout_marginStart="12dp"
                        android:textColor="#FF0000"
                        android:textSize="15sp"
                        android:text="0"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        app:layout_constraintStart_toEndOf="@id/bigFileCount"
                        app:layout_constraintBaseline_toBaselineOf="@id/bigFileCount"
                        android:textColor="#222F3A"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="个大文件"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/bigFileTip"
                        app:layout_constraintStart_toStartOf="@id/bigFileCount"
                        app:layout_constraintTop_toBottomOf="@id/bigFileCount"
                        android:textColor="#737373"
                        android:textSize="12sp"
                        android:text="找找不需要的大文件，释放空间"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/bigFileGroup"
                        app:constraint_referenced_ids="bigFile1,bigFile2,bigFile3,goBigFile"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:id="@+id/bigFile1"
                        android:visibility="gone"
                        tools:visibility="visible"
                        app:layout_constraintTop_toBottomOf="@id/bigFileItemIcon"
                        app:layout_constraintStart_toStartOf="@id/bigFileItemIcon"
                        android:layout_marginTop="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/bigFileIcon1"
                            tools:src="@mipmap/ic_format_unknown"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                        <TextView
                            android:id="@+id/bigFile1Size"
                            android:textColor="#989898"
                            android:textSize="12sp"
                            tools:text="122MB"
                            android:layout_marginStart="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bigFile2"
                        android:visibility="gone"
                        tools:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@id/bigFile1"
                        app:layout_constraintStart_toEndOf="@id/bigFile1"
                        android:layout_marginStart="21dp"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/bigFileIcon2"
                            tools:src="@mipmap/ic_format_unknown"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                        <TextView
                            android:id="@+id/bigFile2Size"
                            android:textColor="#989898"
                            android:textSize="12sp"
                            tools:text="122MB"
                            android:layout_marginStart="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bigFile3"
                        android:visibility="gone"
                        tools:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@id/bigFile1"
                        app:layout_constraintStart_toEndOf="@id/bigFile2"
                        android:layout_marginStart="21dp"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/bigFileIcon3"
                            tools:src="@mipmap/ic_format_unknown"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                        <TextView
                            android:id="@+id/bigFile3Size"
                            android:textColor="#989898"
                            android:textSize="12sp"
                            tools:text="122MB"
                            android:layout_marginStart="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <ViewSwitcher
                        android:id="@+id/bigFileTotalViewSwitcher"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/bigFileTotalSize"
                            android:text="236MB"
                            android:textColor="#030303"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.feisukj.cleaning.view.SmallLoading
                            android:id="@+id/load1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                    </ViewSwitcher>
                    <TextView
                        android:id="@+id/goBigFile"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:background="@drawable/shape_go_file"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="19dp"
                        android:layout_marginTop="83dp"
                        android:text="去清理"
                        android:gravity="center"
                        android:textColor="#3392FD"
                        android:layout_width="79dp"
                        android:layout_height="20dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/unloadingResidueItem"
                    android:layout_marginTop="8dp"
                    android:background="#FFFFFF"
                    android:paddingBottom="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/unloadingResidueItemIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="13dp"
                        android:src="@mipmap/ic_unloading_residue"
                        android:layout_width="43dp"
                        android:layout_height="43dp"/>
                    <TextView
                        android:id="@+id/unloadingResidueCount"
                        app:layout_constraintStart_toEndOf="@id/unloadingResidueItemIcon"
                        app:layout_constraintTop_toTopOf="@id/unloadingResidueItemIcon"
                        android:layout_marginStart="12dp"
                        android:textColor="#FF0000"
                        android:textSize="15sp"
                        android:text="0"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        app:layout_constraintStart_toEndOf="@id/unloadingResidueCount"
                        app:layout_constraintBaseline_toBaselineOf="@id/unloadingResidueCount"
                        android:textColor="#222F3A"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="个残留文件"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/unloadingResidueTip"
                        app:layout_constraintStart_toStartOf="@id/unloadingResidueCount"
                        app:layout_constraintTop_toBottomOf="@id/unloadingResidueCount"
                        android:textColor="#737373"
                        android:textSize="12sp"
                        android:text="清理卸载残留文件，加速运行"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/unloadingResidueGroup"
                        app:constraint_referenced_ids="unloadingResidue1,unloadingResidue2,unloadingResidue3,goUnloadingResidue"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:id="@+id/unloadingResidue1"
                        android:visibility="gone"
                        tools:visibility="visible"
                        app:layout_constraintTop_toBottomOf="@id/unloadingResidueItemIcon"
                        app:layout_constraintStart_toStartOf="@id/unloadingResidueItemIcon"
                        android:layout_marginTop="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/unloadingFileIcon1"
                            android:src="@mipmap/ic_format_unknown"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                        <TextView
                            android:id="@+id/unloadingFile1"
                            android:textColor="#989898"
                            android:textSize="12sp"
                            android:text="122MB"
                            android:layout_marginStart="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/unloadingResidue2"
                        android:visibility="gone"
                        tools:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@id/unloadingResidue1"
                        app:layout_constraintStart_toEndOf="@id/unloadingResidue1"
                        android:layout_marginStart="21dp"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/unloadingFileIcon2"
                            android:src="@mipmap/ic_format_unknown"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                        <TextView
                            android:id="@+id/unloadingFile2"
                            android:textColor="#989898"
                            android:textSize="12sp"
                            android:text="122MB"
                            android:layout_marginStart="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/unloadingResidue3"
                        android:visibility="gone"
                        tools:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@id/unloadingResidue1"
                        app:layout_constraintStart_toEndOf="@id/unloadingResidue2"
                        android:layout_marginStart="21dp"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/unloadingFileIcon3"
                            android:src="@mipmap/ic_format_unknown"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                        <TextView
                            android:id="@+id/unloadingFile3"
                            android:textColor="#989898"
                            android:textSize="12sp"
                            android:text="122MB"
                            android:layout_marginStart="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <ViewSwitcher
                        android:id="@+id/unloadingResidueViewSwitcher"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/unloadingResidueTotalSize"
                            android:text="236MB"
                            android:textColor="#030303"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.feisukj.cleaning.view.SmallLoading
                            android:id="@+id/load2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                    </ViewSwitcher>
                    <TextView
                        android:id="@+id/goUnloadingResidue"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:background="@drawable/shape_go_file"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="19dp"
                        android:layout_marginTop="83dp"
                        android:text="去清理"
                        android:gravity="center"
                        android:textColor="#3392FD"
                        android:layout_width="79dp"
                        android:layout_height="20dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/repetitionFileItem"
                    android:layout_marginTop="8dp"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="79dp">
                    <ImageView
                        android:id="@+id/repetitionFileItemIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="13dp"
                        android:src="@mipmap/ic_repetition_file"
                        android:layout_width="43dp"
                        android:layout_height="43dp"/>
                    <TextView
                        android:id="@+id/repetitionFileCount"
                        app:layout_constraintStart_toEndOf="@id/repetitionFileItemIcon"
                        app:layout_constraintTop_toTopOf="@id/repetitionFileItemIcon"
                        android:layout_marginStart="12dp"
                        android:textColor="#FF0000"
                        android:textSize="15sp"
                        android:text="0"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        app:layout_constraintStart_toEndOf="@id/repetitionFileCount"
                        app:layout_constraintBaseline_toBaselineOf="@id/repetitionFileCount"
                        android:textColor="#222F3A"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="个重复文件"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/repetitionFileTip"
                        app:layout_constraintStart_toStartOf="@id/repetitionFileCount"
                        app:layout_constraintTop_toBottomOf="@id/repetitionFileCount"
                        android:textColor="#737373"
                        android:textSize="12sp"
                        android:text="清理重复文件，释放空间"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ViewSwitcher
                        android:id="@+id/repetitionFileViewSwitcher"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/repetitionFileTotalSize"
                            android:text="236MB"
                            android:textColor="#030303"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.feisukj.cleaning.view.SmallLoading
                            android:id="@+id/load3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                    </ViewSwitcher>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/musicItem"
                    android:layout_marginTop="8dp"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="79dp">
                    <ImageView
                        android:id="@+id/musicItemIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="13dp"
                        android:src="@mipmap/ic_music"
                        android:layout_width="43dp"
                        android:layout_height="43dp"/>
                    <TextView
                        android:id="@+id/musicCount"
                        app:layout_constraintStart_toEndOf="@id/musicItemIcon"
                        app:layout_constraintTop_toTopOf="@id/musicItemIcon"
                        android:layout_marginStart="12dp"
                        android:textColor="#FF0000"
                        android:textSize="15sp"
                        android:text="11"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        app:layout_constraintStart_toEndOf="@id/musicCount"
                        app:layout_constraintBaseline_toBaselineOf="@id/musicCount"
                        android:textColor="#222F3A"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="首本地音乐"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/musicTip"
                        app:layout_constraintStart_toStartOf="@id/musicCount"
                        app:layout_constraintTop_toBottomOf="@id/musicCount"
                        android:textColor="#737373"
                        android:textSize="12sp"
                        android:text="删除不常听的音乐"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ViewSwitcher
                        android:id="@+id/musicViewSwitch"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/musicTotalSize"
                            android:text="236MB"
                            android:textColor="#030303"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.feisukj.cleaning.view.SmallLoading
                            android:id="@+id/load4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                    </ViewSwitcher>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/appItem"
                    android:layout_marginTop="8dp"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="79dp">
                    <ImageView
                        android:id="@+id/appItemIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="13dp"
                        android:src="@mipmap/ic_app_no_use"
                        android:layout_width="43dp"
                        android:layout_height="43dp"/>
                    <TextView
                        android:id="@+id/appTitle"
                        app:layout_constraintStart_toEndOf="@id/appItemIcon"
                        app:layout_constraintTop_toTopOf="@id/appItemIcon"
                        android:layout_marginStart="12dp"
                        android:textColor="#222F3A"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="整理不常用的应用软件"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/appTip"
                        app:layout_constraintStart_toStartOf="@id/appTitle"
                        app:layout_constraintTop_toBottomOf="@id/appTitle"
                        android:textColor="#737373"
                        android:textSize="12sp"
                        android:text="卸载不常用软件,保持手机轻快"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ViewSwitcher
                        android:id="@+id/appViewSwitch"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.feisukj.cleaning.view.SmallLoading
                            android:id="@+id/load5"
                            android:layout_gravity="end"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <ViewSwitcher
                            android:id="@+id/appTotalSizeSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
