<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:background="@mipmap/bg_home_top">
        <LinearLayout
            android:id="@+id/title"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/leftBack"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/leftTitle"
                android:text="手机降温完毕"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:layout_marginStart="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/completeIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ddddd"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/ic_phone_cooling_down_complete"
            android:layout_width="50dp"
            android:layout_height="54dp"/>
        <LinearLayout
            android:id="@+id/ddddd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/completeIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/completeIcon"
            app:layout_constraintBottom_toBottomOf="@id/completeIcon"
            android:orientation="vertical">
            <TextView
                android:id="@+id/completeTitle"
                android:text="手机降温完毕。"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/completeTip"
                android:text="降温后等待60秒后效果更佳哦"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>