<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/titleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="11dp"
            tools:text="垃圾图片"
            android:textColor="#4B4B4B"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/titleFold"
            app:layout_constraintStart_toEndOf="@id/titleText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="14dp"
            android:src="@drawable/fold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/allChoose"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/selector_item_selector" />
        <com.feisukj.cleaning.view.SmallLoading
            android:id="@+id/smallLoading"
            app:layout_constraintStart_toStartOf="@id/allChoose"
            app:layout_constraintEnd_toEndOf="@id/allChoose"
            app:layout_constraintTop_toTopOf="@id/allChoose"
            app:layout_constraintBottom_toBottomOf="@id/allChoose"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <View
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="27dp"
            android:background="#E8E8E8"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/photoContent"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/photoImage1"
            android:scaleType="centerCrop"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/photoImage2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_width="78dp"
            android:layout_height="83dp"/>
        <ImageView
            android:id="@+id/photoImage2"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@id/photoImage1"
            app:layout_constraintEnd_toStartOf="@id/photoImage3"
            app:layout_constraintTop_toTopOf="@id/photoImage1"
            android:layout_width="78dp"
            android:layout_height="83dp"/>
        <ImageView
            android:id="@+id/photoImage3"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@id/photoImage2"
            app:layout_constraintEnd_toStartOf="@id/photoImage4"
            app:layout_constraintTop_toTopOf="@id/photoImage1"
            android:layout_width="78dp"
            android:layout_height="83dp"/>
        <ImageView
            android:id="@+id/photoImage4"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@id/photoImage3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/photoImage1"
            android:layout_width="78dp"
            android:layout_height="83dp"/>
        <TextView
            android:id="@+id/morePhotoCount"
            app:layout_constraintStart_toStartOf="@id/photoImage4"
            app:layout_constraintEnd_toEndOf="@id/photoImage4"
            app:layout_constraintTop_toTopOf="@id/photoImage4"
            app:layout_constraintBottom_toBottomOf="@id/photoImage4"
            android:gravity="center"
            android:background="#5000"
            tools:text="暂无"
            android:textColor="#fff"
            android:textSize="23sp"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>