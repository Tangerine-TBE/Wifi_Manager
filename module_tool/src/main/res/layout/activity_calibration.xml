<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.feisukj.ui.activity.CalibrationActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="尺子不标准？"
        android:textColor="#ff0a0a0a"
        android:textSize="24sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择下列物体以对准~"
        android:textColor="#ff0a0a0a"
        android:textSize="24sp"
        android:layout_marginTop="19dp"/>
    <TextView
        android:id="@+id/resetBtn"
        android:layout_width="95dp"
        android:layout_height="34dp"
        android:text="重置尺子"
        android:textColor="#ff5048fe"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="19dp"
        android:background="@drawable/shape_calibration_reset_border"/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/bank_card"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="@drawable/shape_calibration_bank_bg"
                android:gravity="center"
                android:padding="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calibration_bank"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银行卡"
                    android:textColor="#ffffffff"
                    android:textSize="24sp"
                    android:layout_marginStart="9dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ruler"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="@drawable/shape_calibration_ruler_bg"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calibration_ruler"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尺子"
                    android:textColor="#ffffffff"
                    android:textSize="24sp"
                    android:layout_marginStart="9dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/coin"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="@drawable/shape_calibration_coin_bg"
                android:gravity="center"
                android:padding="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calibration_coin"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="硬币"
                    android:textColor="#ffffffff"
                    android:textSize="24sp"
                    android:layout_marginStart="9dp"/>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>