<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="24dp"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/psIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/psName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="设备信息"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/psIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/psHint"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="为您提供精确的扫描、清理服务"
            android:textColor="@color/theme_color"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/psName"
            app:layout_constraintTop_toBottomOf="@+id/psName" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>