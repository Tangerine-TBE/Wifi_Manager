<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="125dp"
    android:layout_height="48dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_suspension_right">
    <!--右边的视图-->
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="image_g1,line_g1,gSize_g1,unitGB_g1,line2_g1,gDes_g1"/>
    <ImageView
        android:id="@+id/image_g1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/ic_supension"
        android:layout_marginStart="8dp"
        android:layout_width="32dp"
        android:layout_height="32dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_g1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"/>
    <TextView
        android:id="@+id/gSize_g1"
        app:layout_constraintBottom_toBottomOf="@id/line2_g1"
        app:layout_constraintStart_toStartOf="@id/line_g1"
        app:layout_constraintEnd_toStartOf="@id/unitGB_g1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        tools:textColor="@color/white"
        tools:text="125.95"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/unitGB_g1"
        app:layout_constraintStart_toEndOf="@id/gSize_g1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/gSize_g1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        tools:textColor="@color/white"
        android:textSize="10sp"
        tools:text="GB"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line2_g1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>
    <TextView
        android:id="@+id/gDes_g1"
        app:layout_constraintStart_toStartOf="@id/line_g1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/line2_g1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        tools:textColor="@color/white"
        android:text="@string/daiqingli"
        android:textSize="12sp"/>
    <!--左边的视图-->
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="image_g2,line_g2,gSize_g2,unitGB_g2,line2_g2,gDes_g2"/>
    <ImageView
        android:id="@+id/image_g2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/ic_supension"
        android:layout_marginEnd="8dp"
        android:layout_width="32dp"
        android:layout_height="32dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_g2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6"/>
    <TextView
        android:id="@+id/gSize_g2"
        app:layout_constraintBottom_toBottomOf="@id/line2_g2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/unitGB_g2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        tools:textColor="@color/white"
        tools:text="125.95"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/unitGB_g2"
        app:layout_constraintStart_toEndOf="@id/gSize_g2"
        app:layout_constraintEnd_toEndOf="@id/line_g2"
        app:layout_constraintBaseline_toBaselineOf="@id/gSize_g2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        tools:textColor="@color/white"
        android:textSize="10sp"
        tools:text="GB"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line2_g2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>
    <TextView
        android:id="@+id/gDes_g2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/line_g2"
        app:layout_constraintTop_toBottomOf="@id/line2_g2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        tools:textColor="@color/white"
        android:text="@string/daiqingli"
        android:textSize="12sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>