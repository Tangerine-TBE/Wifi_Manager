<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.wifi_manager">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wifi_Manager"
        android:usesCleartextTraffic="true"
        tools:replace="android:allowBackup">
        <activity android:name=".ui.activity.SignalUpActivity"></activity>
        <activity android:name=".ui.activity.HardwareTweaksActivity" />
        <activity android:name=".ui.activity.SafetyCheckActivity" />
        <activity android:name=".ui.activity.CheckDeviceViewActivity" />
        <activity android:name=".ui.activity.WifiProtectInfoViewActivity" />
        <activity android:name=".ui.activity.WifiProtectViewActivity" />
        <activity
            android:name=".ui.activity.SpeedTestResultViewActivity"
            android:launchMode="singleTop"
            android:theme="@style/SpeedResultTheme" />
        <activity android:name=".ui.activity.CancelShareApplyViewActivity" />
        <activity android:name=".ui.activity.CancelShareViewActivity" />
        <activity android:name=".ui.activity.WifiInfoViewActivity" />
        <activity
            android:name=".ui.activity.SpeedTestViewActivity"
            android:launchMode="singleTop" />
        <activity android:name=".ui.activity.ScanResultViewActivity" />
        <activity
            android:name=".ui.activity.MainViewActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.BeginActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppStartTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".ui.activity.ScanActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
    </application>

</manifest>