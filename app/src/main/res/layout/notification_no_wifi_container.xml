<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/notification_include"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/app_logo" />

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/imageView9"
        android:layout_alignTop="@+id/imageView9"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
      />

    <TextView
        android:layout_alignBottom="@+id/imageView9"
        android:id="@+id/notification_content"
        android:layout_alignLeft="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     />


    <ImageView
        android:layout_alignParentRight="true"
        android:id="@+id/notification_scan"
        android:layout_width="30dp"
        android:layout_centerVertical="true"
        android:layout_height="30dp"
        android:src="@mipmap/icon_notification_scan" />

</RelativeLayout>