<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <ImageView
        android:id="@+id/photoItemPreView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        tools:src="@mipmap/splash_clean"
        android:layout_width="40dp"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/photoItemName"
        tools:text="手机相册"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/photoItemPreView"
        app:layout_constraintTop_toTopOf="@id/photoItemPreView"
        app:layout_constraintBottom_toTopOf="@id/photoItemCount"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/photoItemCount"
        app:layout_constraintTop_toBottomOf="@id/photoItemName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/photoItemName"
        tools:text="15张"
        android:textSize="12sp"
        android:textColor="#6d6d6d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/photoItemRightIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:src="@mipmap/ic_fold_true"
        android:layout_width="12dp"
        android:layout_height="12dp"/>
    <TextView
        android:id="@+id/photoItemSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/photoItemRightIcon"
        android:layout_marginEnd="10dp"
        tools:text="79.8MB"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</androidx.constraintlayout.widget.ConstraintLayout>